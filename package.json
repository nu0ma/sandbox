{
  "name": "express-bff",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts | npx pino-pretty ",
